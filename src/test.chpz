start:
	print "This program helps you count sheep!"
	print "How many sheep would you like to count to?"
	let count = 10

let current = 0

count:
	if current >= count then finish
	let current = current + 1
	print "This is sheep number " + current
	goto count
	
finish:
	print "Go again? [y,n]"
	let response = "n"
	if response == "y" then start